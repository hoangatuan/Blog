---
import Item from "../blog/ListItem.astro";
import { fetchLatestPosts } from "../../utils/blog";

const posts = await fetchLatestPosts();
---

<div class="container mx-auto px-4 lg:px-8">
  <ul
    class="grid gap-8 lg:grid-cols-3"
    style="row-gap: 0.1rem; column-gap: 2rem;"
  >
    {
      posts.map((post) => (
        <li class="mb-8">
          <Item prefix='articles' post={post} />
        </li>
      ))
    }
  </ul>
</div>
