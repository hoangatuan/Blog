---
import type { Post } from '../../types';
import { Icon } from 'astro-icon/components';
import { Image } from "astro:assets";
import PostTags from './Tags.astro';
import { getFormattedDate } from '../../utils/utils';

import DSC08678 from "../../assets/DSC08678.jpg"

export interface Props {
  post: Post;
}

const { post } = Astro.props;
---

<article>
    <div class="flex space-x-8">
        <div>
            <header>
                <span class="text-sm">
                    <Icon name="tabler:clock" class="w-3.5 h-3.5 inline-block -mt-0.5 dark:text-gray-400" />
                    <time datetime={String(post.publishDate)} class="inline-block">{getFormattedDate(post.publishDate)}</time>
                </span>

                <h2 class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading dark:text-slate-300 hover:text-primary dark:hover:text-blue-700 transition ease-in duration-200">
                    {post.title}
                </h2>
            </header>

            {post.excerpt && <p class="flex-grow text-muted dark:text-slate-400 text-lg">{post.excerpt}</p>}

            <footer class="mt-5">
                <PostTags tags={post.tags} />
            </footer>
        </div>
        <Image class="rounded-lg w-80 h-80" src={DSC08678} alt="Me enjoy fishing."/>
    </div>
</article>