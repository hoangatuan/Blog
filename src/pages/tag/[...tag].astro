---
import PageLayout from "../../layouts/PageLayout.astro";
import type { InferGetStaticPropsType, GetStaticPaths } from "astro";
import { getStaticPathsBlogTag1 } from "../../utils/blog";
import BlogList from "../../components/blog/List.astro";
import TagsHeader from "../../components/common/TagsHeader.astro";

export const prerender = true;

export const getStaticPaths = (async () => {
  return await getStaticPathsBlogTag1();
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { tag, posts } = Astro.props as Props;
---

<PageLayout>
  <TagsHeader name=`#${tag}`` />
  <section class="px-4 md:px-6 mx-auto max-w-4xl">
    <BlogList prefix="articles" posts={posts} />
  </section>
</PageLayout>
